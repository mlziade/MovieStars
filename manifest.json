{
  "manifest_version": 3,
  "name": "MovieStars",
  "version": "1.0",
  "description": "",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "htmls/popup.html",
    "default_icon": "assets/icon.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ]
}